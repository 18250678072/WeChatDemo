.slider,
.slider swiper,
.slider swiper image{
  width: 100%;
  height: 390rpx;
}
.kind{
  display: flex;
  flex-wrap: wrap;
}
.kind .kind-item{
  width: 33.3333%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  box-sizing: border-box;
  font-size: 16px;
  position: relative;
}
.kind .kind-item::after{
  content: "";
  position: absolute;
  background: #ccc;
  width: 1px;
  height: 100%;
  right: 0;
  /* top: 0; */
}
.kind .kind-item:nth-child(3n)::after{
  width: 0;
}
.kind .kind-item image{
  width: 80rpx;
  height: 80rpx;
}
.index-enter{
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  display: flex;
}
.enter-item{
  width: 50%;
  display: flex;
  justify-content: center;
}
.index-enter image{
  width: 320rpx;
  height: 178rpx;
}
page{
  background: #ccc;
