page{
  background-color: #f1f1f1;
}
.card{
  background: #fff;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  margin: 60rpx 20rpx;
  padding: 20rpx 35rpx;
  display: flex;
  flex-direction: column;
}
.card-title{
  font-size: 20px;
  margin-bottom: 20rpx;
}
.card-date{
  font-size: 14px;
  color: #ccc;
  margin-bottom: 20rpx;   
  border-bottom: 1px solid #ccc; 
  padding-bottom: 20rpx;
}
.card-image{
  width: 100%;
  height: 300rpx;
}
.card-desc{
  font-size: 16px;
  color: #333;
  margin-bottom: 20rpx;   
  border-bottom: 1px solid #ccc; 
  padding-bottom: 20rpx;
}
.card-read{
  font-size: 14px;
  color: #666;
}
